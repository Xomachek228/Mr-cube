        screen.draw.text("Ð¡Ð½Ð°Ñ‡Ð°Ð»Ð° ÑƒÐ½Ð¸Ñ‡Ñ‚Ð¾Ð¶Ñ‚Ðµ Ð²Ñ€Ð°Ð³Ð¾Ð²,Ð¿Ð¾Ñ‚Ð¾Ð¼ Ð°ÐºÑ‚Ð¸Ð²Ð¸Ñ€ÑƒÐ¹Ñ‚Ðµ Ñ€Ñ‹Ñ‡Ð°Ð³Ð¸!", center=(WIDTH/2,HEIGHT/2+70), color="red", fontsize=14)
        screen.draw.text("ÐÐ°Ð¶Ð¼Ð¸Ñ‚Ðµ Enter Ð´Ð»Ñ Ð¿Ñ€Ð¾Ð´Ð¾Ð»Ð¶ÐµÐ½Ð¸Ñ", center=(WIDTH/2,HEIGHT/2+90), color="green", fontsize=14)

def update(dt):
    global mode, money, rounds, lvl
    if enemies == [] and hero.hp > 0 and leveroff.image == "leveron":
        rounds += 1
        money += 1
        leveroff.image = "leveroff"
        if lvl == lvl_1:
            lvl = lvl_2
        elif lvl ==  lvl_2:
            lvl = lvl_3
        elif lvl ==  lvl_3:
            lvl = lvl_4
        generate_enemy()
    elif hero.hp <= 0:
        mode = "end"
    for step in steps:
        if time.time()-step.time>step_delay:
            steps.remove(step)

def on_key_down(key):
    global money, guide, killed_enemy, lvl, gloves_see, gloves, mode
    old_x = hero.x
    old_y = hero.y
    if keyboard.right or keyboard.d:
        hero.left += floor.width
    elif keyboard.left or keyboard.a:
        hero.left -= floor.width
    elif keyboard.up or keyboard.w:
        hero.top -= floor.width
    elif keyboard.down or keyboard.s:
        hero.top += floor.width
    elif keyboard.enter and mode == "guide":
        mode = "game"
    elif keyboard.r and gloves_see:
        for enemy in enemies:
            enemy.angle = +7
            animate(enemy, duration=0.2, angle=0)
            enemy.hp -= 10
        for gloves in gloves_list:
            gloves.pos = (485, 475)
            gloves_see = False
        guide = False
        for y in range(len(lvl)):
            for x in range(len(lvl[y])):
                if lvl[y][x] == 4:
                    lvl[y][x] = 1

    x = int(hero.left // 50)
    y = int(hero.top // 50)
    if lvl[y][x] == 0 or lvl[y][x] == 4:
        hero.x = old_x
        hero.y = old_y
    create_step()
    index = hero.collidelist(enemies)
    if index != -1:
        enemy = enemies[index]
        hero.x = old_x
        hero.y = old_y
        enemy.hp -= hero.attack
        enemy.angle = +7
        animate(enemy, duration=0.2, angle=0)
        if enemy.hp <= 0:
            if enemy.bonus == 1:
                gloves = Actor("gloves")
                gloves.pos = enemy.pos
                gloves_list.append(gloves)
            money += 1
            killed_enemy += 1
            enemies.pop(index)
        else:
            hero.hp -= enemy.attack
                
    index = hero.collidelist(gloves_list)
    if index != -1:
        if hero.hp < 90:
            hero.hp += 10
        else:
            hero.hp = 100
        gloves = gloves_list[index]
        gloves.pos = (425, 475)
        gloves_see = True
    index = hero.colliderect(leveroff)
    if index == 1:
        leveroff.image = "leveron"
